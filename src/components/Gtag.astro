---
export interface Props {
  code?: string;
}

const { code } = Astro.props;
---

<!-- Google tag (gtag.js) -->
<script async src={`https://www.googletagmanager.com/gtag/js?id=${code}`}
></script>
<script define:vars={{ code }}>
  window.dataLayer = window.dataLayer || [];

  function gtag() {
    dataLayer.push(arguments);
  }

  gtag("js", new Date());

  gtag("config", code);
</script>
